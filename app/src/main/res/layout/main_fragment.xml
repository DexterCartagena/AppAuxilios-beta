<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:text="GUIAS Y CONSEJOS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="128dp"
        android:text="No se debe colgar el telefono hasta recibir ayuda adicional o hasta que el operador asi se lo indique. A traves de este servicio puede recibir instrucciones para realizar reanimacion cardiopulmonar (RCP), usar un desfribilador externo automatico (AED) o brindar atencion basica mientra llega mas ayuda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="341dp"
        android:layout_height="132dp"
        android:text="Despues de determinar el problema, el siguiente paso para brindar ayuda es determinar la capacidad de respuestade la persona lesionada o enferma. La mejor manera de determinar esto es tocar a la persona y hablarle en voz alta: &quot;Â¿Estas bien?&quot;. Despues de determinar la capacidad de respuesta, grite pidiendo ayuda."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="338dp"
        android:layout_height="122dp"
        android:text="Reconocer el problema y ofrecer ayuda es el primer caso ante cualquier emergencia. Apenas se sepa que alguien se encuentra herido o enfermo de gravedad, lo mas sensato y necesario es activar el sistema de respuesta de emergencia llamando al 911, servicio de Medicos de emergencia."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="188dp"
        android:layout_height="165dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434"
        app:srcCompat="@mipmap/doctorfirstmedical" />

</androidx.constraintlayout.widget.ConstraintLayout>